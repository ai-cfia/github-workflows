{
    "categories": [
        {
            "title": "## User stories 👑",
            "labels": ["epic"]
        },
        {
            "title": "## New features 🎉",
            "labels": ["enhancement", "user-visible"]
        },
        {
            "title": "## Bug fixes 🐛",
            "labels": ["bug"]
        },
        {
            "title": "## Other Changes",
            "labels": ["*"]
        }
    ],
    "sort": "ASC",
    "template": "${{CHANGELOG}}",
    "pr_template": "- ${{TITLE}}\n   - PR: #${{NUMBER}}",
    "empty_template": "- no changes",
    "max_pull_requests": 1000,
    "max_back_track_time_days": 1000
}
